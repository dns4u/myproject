  <div id="search-item">
<ul>
<%temp=0%>
  <%if(file_result != nil)%>
  <% file_result.each do|result| %>
    <%if(result.file_file_name=~/#{Regexp.escape(search_text)}/)%>
      <%filename=result.file_file_name%>
     <li><a href="/files/original/<%=filename%>"><%=result.file_file_name %></a></li>
     <%temp=1%>
     <%end%>
    <%end%>
<%end%>
<%if(text_result!= nil)%>
<% text_result.each do|resultset| %>
       <%if(resultset.share_text=~/#{Regexp.escape(search_text)}/)%>
      <li><%=resultset.share_text %></li>
     <%temp=1%>
     <%end%>
    <%end%>
<%end%>
</ul>
<%if(temp==0)%>
  <p>File not found </p>
